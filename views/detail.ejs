<html>
<head>
  <meta charset="UTF-8">
  <title>Bookings</title>
  <link rel="stylesheet" type="text/css" href="style.css">
</head>
    <body>
		<H1>Welcome, <%= user.name %></H1>
		<hr/>
        <H2>Booking Details</H2><hr>
        <p>Booking Name: <%= booking.bookingname %></i></p>
        <p>Mobile: <%= booking.mobile %></p>
        <p>Party size: <%= booking.size %></p>
        <p>Date: <%= booking.date %></p>

        <% if (booking.photo) { %>
            <img src="data:image/jpg;base64, <%= booking.photo %>"><br>
        <% } %>

        <% if (booking.userid) { %>
            <p><small>Created by User ID: <%= booking.userid %></small></p>
        <% } %>
        <br>
        <a class="button" href="/edit?_id=<%= booking._id %>">edit</a><br>
        <a class="button" href="/delete?_id=<%= booking._id %>">delete</a><br>
        <a class="button" href="/">home</a>
    </body>
</html>
